<div class="jumbotron">
  <h1>Hello, world!</h1>
  <p>This is my map app</p>
</div>

<div class="container">
  <p>The current temperature at <strong><%= @the_address %></strong> is <strong><%= @the_temperature %> degrees.</strong></p>
  <p>The outlook for the next hour is: <strong><%= @the_hour_outlook %></strong></p>
  <p>The outlook for the next day is: <strong><%=  @the_day_outlook %></strong></p>
</div>

<script>
  var map;
  function initialize() {
    var mapOptions = {
      zoom: 14,
      center: new google.maps.LatLng(<%= @the_latitude %>, <%= @the_longitude %>)
    };
    map = new google.maps.Map(document.getElementById('map-canvas'),
      mapOptions);
  }

  google.maps.event.addDomListener(window, 'load', initialize);

</script>

<div id="map-canvas" class="container"></div>
